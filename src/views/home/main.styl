@import '~assets/stylus/variable.styl'
@import '~assets/stylus/mixin.styl'

.home
  fixed-full(2)
  padding-bottom 130px
  overflow scroll
  background #EFF0F0
  .header
    box-sizing border-box
    height:157px;
    padding 38px 0 0 24px
    background-color #fff
    border-bottom 2px solid #EFF0F0
    .bindPhone
      height:28px;
      font-size:28px;
      font-weight:400;
      color:rgba(51,51,51,1);
      line-height:28px;
      margin-bottom 20px
      span
        color #F95A29
    .bindTips
      height:28px;
      font-size:28px;
      font-weight:400;
      color:rgba(51,51,51,1);
      line-height:28px;
      margin-bottom 20px
      
  .home-tab
    height 84px
    width 100%
    line-height 84px
    margin-bottom 20px
    text-align center
    background $color-fff
    .flex-item
      font-size 28px
      color $color-text
      &.active:after
        content '\0020'
        pos-x()
        width 120px
        height 4px
        bottom 0
        background-color #F95A29
      &.active
        color #F95A29
        font-weight bold
  .content

  .switchWrap
    width 100%
  .switchItem
    box-sizing border-box
    width 100%
    height 104px
    background $color-fff
    padding 36px 24px
    display flex
    justify-content space-between
    border-bottom 2px solid #EFF0F0
    &:nth-child(even)
      border-bottom none
      margin-bottom 20px
    .label
      height:30px;
      font-size:30px;
      font-weight:400;
      color:rgba(51,51,51,1);
      line-height:40px;
